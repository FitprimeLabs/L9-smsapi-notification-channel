{
    "name": "fitprime/l9-smsapi-notification-channel",
    "description": "SMSAPI notification channel for Laravel 9",
    "homepage": "https://github.com/procionegobbo/l9-smsapi-notification-channel",
    "license": "MIT",
    "authors": [
        {
            "name": "Federico Maiorini",
            "email": "procionegobbo@gmail.com",
            "homepage": "https://fitprime.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=8.0",
        "illuminate/notifications": "~8.0|~9.0",
        "illuminate/support": "~8.0|~9.0",
        "smsapi/php-client": "^3.0"
    },
    "require-dev": {
        "mockery/mockery": "^1.0",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Fitprime\\L9SmsApi\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Fitprime\\L9SmsApi\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-text --coverage-clover=coverage.clover"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Fitprime\\L9SmsApi\\L9SmsApiServiceProvider"
            ]
        }
    }
}
